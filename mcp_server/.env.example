# Graphiti MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
# Choose between 'neo4j' or 'falkordb'
DATABASE_TYPE=falkordb

# FalkorDB Configuration (when DATABASE_TYPE=falkordb)
FALKORDB_URI=bolt://localhost:6379
FALKORDB_USER=
FALKORDB_PASSWORD=

# Set the default database name for FalkorDB
DEFAULT_DATABASE=graphiti_falkordb

# Neo4j Configuration (when DATABASE_TYPE=neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=demodemo

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key
MODEL_NAME=gpt-4o-mini
SMALL_MODEL_NAME=gpt-4o-mini
LLM_TEMPERATURE=0.0

# Optional: OpenAI Base URL (for custom endpoints)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Azure OpenAI Configuration
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-01
# AZURE_OPENAI_USE_MANAGED_IDENTITY=false

# Optional: Azure OpenAI Embedding Configuration
# AZURE_OPENAI_EMBEDDING_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment
# AZURE_OPENAI_EMBEDDING_API_VERSION=2024-02-01
# AZURE_OPENAI_EMBEDDING_API_KEY=your_embedding_api_key

# Performance Configuration
SEMAPHORE_LIMIT=10

# Telemetry (optional)
# GRAPHITI_TELEMETRY_ENABLED=true

# MCP Server Configuration
# MCP_SERVER_HOST=localhost
